{
  "compilerOptions": {
    "baseUrl": "./",
    //   "types": ["vitest/globals"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/lib/types/*.d.ts",
    "vitest.config.mts"
  ],
  "exclude": ["node_modules"]
}
