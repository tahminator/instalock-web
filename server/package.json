{
  "name": "@instalock/server",
  "version": "1.0.0",
  "description": "Server Entrypoint for Instalock",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "prestart": "prisma migrate deploy",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=src/index.js",
    "start": "node src/index.js",
    "postinstall": "prisma generate",
    "db:pull": "prisma db pull",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "env:pull": "pnpx dotenv-vault@latest pull",
    "env:push": "pnpx dotenv-vault@latest push",
    "env:open": "pnpx dotenv-vault@latest open",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@instalock/attempt": "workspace:^",
    "@instalock/sj": "workspace:^",
    "@instalock/types": "workspace:^",
    "@lucia-auth/adapter-prisma": "^4.0.1",
    "@prisma/client": "^5.22.0",
    "arctic": "^2.3.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "ioredis": "^5.4.2",
    "lucia": "^3.2.2",
    "morgan": "^1.10.0",
    "oslo": "^1.2.1",
    "prisma": "^5.22.0",
    "rate-limit-redis": "^4.2.0",
    "@instalock/riot": "workspace:^",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9"
  }
}
